@model IEnumerable<MvcApplication2.FARMERS_MARKET>

@{
    ViewBag.Title = "Index";
}

<h2>Farmers' Markets</h2>

<p>
    <a href="@Url.Action("Create", "Farmers_Market")" class="btn btn-primary" role="button">Add Market</a>
</p>
<br />
<br />
<br />

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="dataTables_wrapper">
                <div class="ibox-content">
                    <table id="markets" class="table table-striped table-bordered table-hover " style="text-align:center; width:100%">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.FMName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Address)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Hours)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NumberOfSuppliers)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PROPIETOR.FName)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FMName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Address)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Hours)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NumberOfSuppliers)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PROPIETOR.FName)
                                </td>
                                <td>
                                    @*@Html.ActionLink("Edit", "Edit", new { id = item.FMName }) |*@
                                    <a href="@Url.Action("Edit", new { id = item.FMName }) " style=" position:relative;" class=" btn btn-primary btn-xs">Edit</a>
                                    @*@Html.ActionLink("Details", "Details", new { id = item.FMName }) |*@
                                    <a href="@Url.Action("Details", new { id = item.FMName }) " style=" position:relative;" class=" btn btn-warning btn-xs">Details</a>
                                    <a href="@Url.Action("Delete", new { id = item.FMName }) " style=" position:relative;" class=" btn btn-danger btn-xs">Delete</a>
                                    @*@Html.ActionLink("Delete", "Delete", new { id = item.FMName })*@
                                </td>
                            </tr>
                        }

                    </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
