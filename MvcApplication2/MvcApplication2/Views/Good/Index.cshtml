@model IEnumerable<MvcApplication2.GOOD>

@{
    ViewBag.Title = "Index";
}

<h2>Goods</h2>

<p>
    <a href="@Url.Action("Create", "Good")" class="btn btn-primary" role="button">Add Good</a>
</p>
<br />
<br />
<br />

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="dataTables_wrapper">
                <div class="ibox-content">
                    <table id="good" class="table table-striped table-bordered table-hover " style="text-align:center; width:100%">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Type)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Quantity)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DEPARTMENT.Name)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Type)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Quantity)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DEPARTMENT.Name)
                                </td>
                                <td>
                                    @*@Html.ActionLink("Edit", "Edit", new { id = item.GoodId }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.GoodId }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.GoodId })*@
                                    <a href="@Url.Action("Edit", new { id = item.GoodId }) " style=" position:relative;" class=" btn btn-primary btn-xs">Edit</a>
                                    <a href="@Url.Action("Details", new { id = item.GoodId }) " style=" position:relative;" class=" btn btn-warning btn-xs">Details</a>
                                    <a href="@Url.Action("Delete", new { id = item.GoodId }) " style=" position:relative;" class=" btn btn-danger btn-xs">Delete</a>

                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
